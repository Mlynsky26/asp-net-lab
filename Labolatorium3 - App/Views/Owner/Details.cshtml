@{
}
<div class="d-flex gap-3 align-items-center">
    <a class="btn btn-outline-info" asp-action="Index"> << Powrót</a>
    <h1>Szczegóły właściciela</h1>
</div>


<ul>
    <li>@Html.DisplayNameFor(i => Model.Name): @Model.Name</li>
    <li>@Html.DisplayNameFor(i => Model.Surname): @Model.Surname</li>
    <li>@Html.DisplayNameFor(i => Model.Phone): @Model.Phone</li>
    <ul>
        <li>@Html.DisplayNameFor(i => Model.Address.City): @Model.Address.City</li>
        <li>@Html.DisplayNameFor(i => Model.Address.Street): @Model.Address.Street</li>
        <li>@Html.DisplayNameFor(i => Model.Address.PostalCode): @Model.Address.PostalCode</li>
    </ul>
</ul>

@if (ViewBag.Cars.Count > 0)
{
<h4>Jego samochody</h4>
<div class="row row-cols-3">
    @foreach (Car item in @ViewBag.Cars)
    {
        <div>
                <div class="card text-dark">
                <div class="card-header fw-bold">
                    @item.Registration
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Maker @item.Name</h5>
                    <ul>
                        <li>@Html.DisplayNameFor(i => item.Volume): @item.Volume</li>
                        <li>@Html.DisplayNameFor(i => item.Power): @item.Power</li>
                        <li>@Html.DisplayNameFor(i => item.EngineType): @item.EngineType.GetDisplayName()</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    </div>
}else
{
    <h4>Brak samochodów</h4>
}
