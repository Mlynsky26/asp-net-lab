@{
}

<div class="d-flex gap-3 align-items-center">
    <a class="btn btn-outline-info" asp-action="Index"> << Powrót</a>
    <h1>Edycja właściciela</h1>
</div>
<form asp-action="Update" method="post">
    <input asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Surname"></label>
        <input class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address.City"></label>
        <input class="form-control" asp-for="Address.City" />
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address.Street"></label>
        <input class="form-control" asp-for="Address.Street" />
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address.PostalCode"></label>
        <input class="form-control" asp-for="Address.PostalCode" />
        <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Edytuj</button>
    </div>
</form>