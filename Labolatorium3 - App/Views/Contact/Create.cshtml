@{
}

<h1>Dodaj kontakt</h1>
<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Birth"></label>
        <input class="form-control" asp-for="Birth" />
        <span asp-validation-for="Birth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OrganizationId"></label>
        <select class="form-select" asp-for="OrganizationId" asp-items="@Model.OrganizationList">
        </select>
        <span asp-validation-for="OrganizationId" class="text-danger"></span>
        <a class="btn btn-primary" asp-controller="Organization" asp-action="Create">Dodaj organizacje</a>
    </div>

    <div class="mb-3">
        <label asp-for="Priority"></label>
        <select class="form-select" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()">
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </div>
</form>